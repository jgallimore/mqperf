#!/bin/sh

start() {
	echo "Starting client ..."
	HOST_ID={{ play_hosts.index(inventory_hostname) }} java -Djavax.net.ssl.trustStore=/tmp/broker.ks -Djavax.net.ssl.trustStorePassword=activemq -jar /tmp/client.jar produce-and-consume --connections=1 "--uri=failover:({{ groups['activemq']|map('extract', hostvars, 'ec2_private_ip_address') | map('regex_replace','^(.*)$','ssl://\\1:61616?socket.verifyHostName=false') | list | join(',') }})" --dest=topic://TEST1 > /tmp/client.log 2>&1 &
}

stop() {
	echo "Shutting down ..."
	for pid in `ps aux | grep "/tmp/client.jar" | grep -v grep | tr -s ' ' | cut -d ' ' -f 2`; do
		echo "killing process $pid ..."
		kill -9 $pid
	done
}

status() {
	num_of_processes=`ps aux | grep "/tmp/client.jar" | grep -v grep | wc -l`
	if [ $num_of_processes -eq 0 ]; then
		echo "Stopped"
		exit 1
	else
		echo "Running"
		exit 0
	fi
}

case "$1" in
	start) 	start ;;
	stop) 	stop ;;
	status)	status ;;
	*) 		echo "usage: $0 start|stop|status" >&2
			exit 1
			;;
esac
